<head>
<style>

.view{
      clear:both;
      height:100%;
      width:100%;
      margin-bottom: 500px;
}

.view_header{
     clear:both;
     background-color: #0099CC;
}

.photos_view{
              border:2px solid #009900;
              float:left;
              margin-right:10px;
              top: 20px;
              height:400px;
              width:30%;
              overflow-y:scroll;
              clear:left
}
.photos_view img {
   width: 100%;
}

.view_properties{
                 width:50%;
                 float:right;
                 height:400px;
}

.button_frame{
            border: 2px solid #0000FF; 
            margin-bottom:10px;
            float:left;
            clear:both <!-- clear  !-->
}

</style>
</head>

<body>

<%= link_to 'Vuelta a Admin', admin_root_path %>
<br>
<h1><center>Indice de Vistas</center></h1>

<div class="button_frame">
<%= button_to "Crear una vista nueva", new_admin_collection_view_path, {method: :get } %>
</div>

<br><br>

<% @views.each do |view| %>

 <div class="view">
 
   <div class="view_header">
     <h3><center><%=view.name%></center</h3>
   </div>
     
       <div class="photos_view">
	 <h4><center>Fotos (<%= view.number_of_photos%>)</center></h4>
         <% view.photos.each do |photo| %>
         <img src="/sample/<%=photo.name%>"> 
         <br><br>
       <% end %>
       </div>

  <div class="view_properties">
    
   
      <%= link_to 'Mostrar', admin_collection_view_path(view), { method: :get} %>
  
    <br><br>
   
       <%= link_to 'Editar', edit_admin_collection_view_path(view), { method: :get}%>
   
    <br><br>
   
       <%= link_to 'Destruir', admin_collection_view_path(view),
                                   method: :delete,
                                   data: { confirm: 'Estas seguro?' } %> 
   
    
  </div>
</div>
<% end %>

</body>
