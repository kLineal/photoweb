<head>
<style>
#batch_photos{
              border:2px solid #009900;
              float:left;
              width:50%;
              margin-right:10px;
              top: 20px;
              height:800px;
              overflow-y:scroll;
              clear:left
}
#delete_tags{
           border: 2px solid #0000FF;
           width:30%;
           height:600px;
           float:right;
           overflow-y:scroll; 
}
#add_tags{
           border: 2px solid #0000FF;
           width:30%;
           height:600px;
           float:right;
           overflow-y:scroll;
}
 

</style>
</head>


<body>

<h1><center> Edit photo <%= @photo.name%> </center></h1>
<%= link_to 'Vuelta a Indice', admin_collection_photos_path %>
<br><br>


     <div id="delete_tags">
        Tagged with:
       <br><br>
      
         <% if !@photo.keywords.any? %>  No tags
         <% else %> 
	   <%= form_for @photo, url: admin_collection_photo_path(@photo), method: :patch  do |f| %> 
              <% @photo.keywords.each do |keyword| %>
	         
	         <li>
		 <%= keyword.name %>
		 (
		 <%= check_box_tag 'keywords_to_delete[]', keyword.name -%>
		 ) 
		 </li>  
		 <br>
              <% end %>
	   <%= f.submit "Delete selected tags" %>
         <% end %>
       <% end %>
   
     </div>
   
     <div id="batch_photos">
       
       <img src="/sample/<%=@photo.name%>", WIDTH=50%, HEIGHT=50%>
       <br><br>
       <%= form_for @photo, url: admin_collection_photo_path(@photo), method: :patch  do |f| %> 
        <%= f.label :name  %>
        <%= f.text_field :name %>
	<br>
	<%= f.submit "Change name" %>
       <% end %>
     </div>
   
     <div id="delete_tags">
       Add tags from: 
       <br><br>
       <% if @available_tags.empty? %> No keywords known
       
       <% else %>
      
         <%= form_for @photo, url: admin_collection_photo_path(@photo), method: :patch  do |f| %> 
          <% @available_tags.each do |tag| %>
	      <li>
		<%= check_box_tag 'keywords_to_append[]', tag.keyword -%>
		<%= tag.keyword -%>
	      </li>
	      <% end %>
	      
	      <%= f.submit "Add selected tags" %>
       
          <% end %>  
         
	 <% end %>
     </div>
     



</body>
